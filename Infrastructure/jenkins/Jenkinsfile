pipeline {
    agent any
    environment{
        DOCKERHUB_CREDENTIALS = 'docker-cred'
        GITHUB_CREDENTIALS = credentials('github-token')
        REPO_URL = 'https://github.com/noa-bl/FinalProject.git'
        DOCKER_IMAGE = 'noabl/flask-app'
        APPLICATION_DIR = 'Application'
        FEATURE_BRANCH = 'feature'
        VERSION = 'latest'
    }
    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/noa-bl/FinalProject.git', branch: 'master', credentialsId: env.GITHUB_CREDENTIALS
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
    }
}
